{
  "name": "mfe-pro-highlighter",
  "version": "1.0.0",
  "description": "Library for highlighting micro frontends with dynamic tooltips and gradient borders.",
  "main": "dist/highlighter.js",
  "typings": "./dist/index.d.ts",
  "packageManager": "pnpm@9.10",
  "private": false,
  "scripts": {
    "build:scss": "sass src/style.scss dist/mfe-highlighter.css",
    "build:ts": "rollup -c",
    "build": "NODE_ENV=production pnpm run build:scss && pnpm run build:ts",
    "dev": "NODE_ENV=development pnpm run build:scss && rollup -c --watch",
    "commit": "./node_modules/.bin/cz",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "publish": "npx semantic-release --no-ci",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --reporters=jest-junit",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@testing-library/dom": "^10.4.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.4",
    "@types/supertest": "^6.0.2",
    "@types/testing-library__dom": "^7.5.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.3.2",
    "rollup": "^4.22.5",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.1",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-watch": "^1.0.4",
    "sass": "^1.79.3",
    "semantic-release": "^24.1.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "microfrontend",
    "highlight",
    "jsdelivr"
  ],
  "author": "EliseuSantos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfe-pro/highlighter.git"
  }
}
